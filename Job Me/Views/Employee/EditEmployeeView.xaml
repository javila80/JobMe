                    FontFamily="{StaticResource fontawesome}"
                   FontSize="60"
                   VerticalOptions="Center"
                   BackgroundColor="WhiteSmoke"
                   Command="{Binding CVTapCommand}"
                   FontAttributes="{StaticResource FontAttrib}"
