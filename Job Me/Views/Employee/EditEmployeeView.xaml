                              CornerRadius="5"
                              HeightRequest="40"
                              FontFamily="14"
                              VerticalOptions="Center"
                              TextColor="White"
                              Command="{Binding BntCommand}"
                              CommandParameter="Jobs"
                              BackgroundColor="{StaticResource JobMeOrange}" />

                <buttons:SfButton Text="{Binding Otherslbl}" x:Name="Others"
                              CornerRadius="5"
                              HeightRequest="40"
                              FontFamily="14"
                              VerticalOptions="Center"
