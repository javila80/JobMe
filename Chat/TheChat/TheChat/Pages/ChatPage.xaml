<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:selectors="clr-namespace:TheChat.Selectors"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:converters="clr-namespace:TheChat.Converters"
             x:Class="TheChat.Pages.ChatPage"
             Visual="Material"
             Title="{Binding GroupName, StringFormat='{0} group'}"
             NavigationPage.HasBackButton="False">

    <ContentPage.Resources>
        <selectors:ChatMessageSelector x:Key="SelectMessageTemplate"/>
        <converters:Base64ToImageConverter x:Key="ToImage"/>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Leave"
                     Command="{Binding LeaveCommand}"/>
    </ContentPage.ToolbarItems>
    
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*"/>
            <RowDefinition Height=".75*"/>
            <RowDefinition Height=".15*"/>
        </Grid.RowDefinitions>

        <Grid BackgroundColor="#EFEFF0">
            <CollectionView
                ItemsSource="{Binding Users}"
                VerticalOptions="Center"
                HeightRequest="50"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedUser}"
                SelectionChangedCommand="{Binding ItemSelectedCommand}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"
                                       ItemSpacing="20"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Padding="0"
                            WidthRequest="50"
                            HeightRequest="50"
                            CornerRadius="25"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            HasShadow="False"
                            IsClippedToBounds="True">
                            <Image Source="{Binding Avatar}"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Messages}"
                        ItemTemplate="{StaticResource SelectMessageTemplate}"
                        Margin="10"
                        ItemsUpdatingScrollMode="KeepLastItemInView">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                                   ItemSpacing="15"/>
            </CollectionView.ItemsLayout>
            <CollectionView.Resources>
                <ResourceDictionary>
                    <DataTemplate x:Key="SimpleText">
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".15*"/>
                                <ColumnDefinition Width=".7*"/>
                                <ColumnDefinition Width=".15*"/>
                            </Grid.ColumnDefinitions>
                            <Frame Padding="0"
                                   CornerRadius="30"
                                   HasShadow="False"
                                   HeightRequest="60"
                                   WidthRequest="60"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   IsClippedToBounds="True"
                                   BackgroundColor="{Binding Color}">
                                <Image Source="{Binding Avatar}"/>
                            </Frame>
                            <pancakeView:PancakeView
                                BackgroundColor="#E6E9EF"
                                Grid.Column="1"
                                CornerRadius="20,20,0,20"
                                IsClippedToBounds="True"
                                HorizontalOptions="FillAndExpand">
                                <StackLayout Margin="15">
                                    <Label Text="{Binding Sender}"
                                           TextColor="{Binding Color}"
                                           FontSize="Micro"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding Text}"
                                           TextColor="DarkSlateGray"
                                           FontSize="Small"/>
                                </StackLayout>
                            </pancakeView:PancakeView>
                        </Grid>
                    </DataTemplate>
                    <DataTemplate x:Key="LocalSimpleText">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".2*"/>
                                <ColumnDefinition Width=".7*"/>
                                <ColumnDefinition Width=".1*"/>
                            </Grid.ColumnDefinitions>
                            <pancakeView:PancakeView
                                BackgroundColor="Navy"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                CornerRadius="20,20,20,0"
                                IsClippedToBounds="True"
                                HorizontalOptions="FillAndExpand"
                                 Margin="0,10,15,0">
                                <Grid>
                                    <StackLayout Margin="15">
                                        <Label Text="{Binding Text}"
                                               TextColor="White"
                                               FontSize="Small"/>
                                    </StackLayout>
                                </Grid>
                            </pancakeView:PancakeView>
                        </Grid>
                    </DataTemplate>
                    <DataTemplate x:Key="UserConnected">
                        <Grid>
                            <pancakeView:PancakeView
                            BackgroundColor="#4C4C4C"
                            CornerRadius="10"
                            IsClippedToBounds="True"
                            HorizontalOptions="FillAndExpand"
                            HeightRequest="40"
                                Margin="0,10,0,0">
                            <StackLayout Orientation="Horizontal"
                                         HorizontalOptions="Center">
                                <Label Text="{Binding Sender}"
                                       TextColor="LightGray"
                                       FontAttributes="Bold"
                                       FontSize="Small"
                                       VerticalOptions="Center"/>
                                <Label Text="Connected"
                                       TextColor="White"
                                       FontSize="Small"
                                       VerticalOptions="Center"/>
                            </StackLayout>
                        </pancakeView:PancakeView>
                        </Grid>
                    </DataTemplate>
                    <DataTemplate x:Key="Photo">
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".15*"/>
                                <ColumnDefinition Width=".7*"/>
                                <ColumnDefinition Width=".15*"/>
                            </Grid.ColumnDefinitions>

                            <Frame Padding="0"
                                   CornerRadius="30"
                                   HasShadow="False"
                                   HeightRequest="60"
                                   WidthRequest="60"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   IsClippedToBounds="True"
                                   BackgroundColor="{Binding Color}">
                                <Image Source="{Binding Avatar}"/>
                            </Frame>
                            <Frame CornerRadius="20"
                                   IsClippedToBounds="False"
                                   Padding="0"
                                   Grid.Column="1"
                                   BackgroundColor="#E6E9EF">
                                <StackLayout
                                    Margin="15">
                                    <Label Text="{Binding Sender}"
                                           TextColor="{Binding Color}"
                                           FontSize="Micro"
                                           FontAttributes="Bold"/>
                                    <Image Source="{Binding Url}"
                                           HeightRequest="150"
                                           HorizontalOptions="Fill"/>
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                    <DataTemplate x:Key="LocalPhoto">
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".2*"/>
                                <ColumnDefinition Width=".7*"/>
                                <ColumnDefinition Width=".1*"/>
                            </Grid.ColumnDefinitions>
                            <Frame CornerRadius="30"
                                   IsClippedToBounds="False"
                                   Padding="0"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="2"
                                   BackgroundColor="Navy">
                                <StackLayout Margin="15">
                                    <Image Source="{Binding Base64Photo, Converter={StaticResource ToImage}}"
                                           Aspect="AspectFill"
                                           HeightRequest="150"
                                           HorizontalOptions="Fill"/>
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </ResourceDictionary>
            </CollectionView.Resources>
        </CollectionView>

        <Grid Grid.Row="2"
              BackgroundColor="#EFEFF0"
              VerticalOptions="End">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width=".8*"/>
                
                <ColumnDefinition Width=".1*"/>
            </Grid.ColumnDefinitions>
            <ImageButton Source="photo.png"
                         Command="{Binding PhotoCommand}"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"/>
            <Editor Text="{Binding Text}"
                    Grid.Column="1"
                    AutoSize="TextChanges"/>
            <ImageButton Grid.Column="2"
                         Source="send.png"
                         Command="{Binding ItemSelectedCommand}"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"/>
        </Grid>
        
    </Grid>
    
</ContentPage>